<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
    <!--<item name="textAllCaps">false</item>-->
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:background">@drawable/coustom_button</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="ButtonStyleStroke" parent="Widget.AppCompat.Button">
        <!--<item name="textAllCaps">false</item>-->
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:background">@drawable/custom_button_stroke</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="rounded_shap">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Calculator_container_Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:background">@drawable/button_circle</item>
    </style>

    <style name="Operators_Button" parent="Calculator_container_Button">
        <item name="backgroundTint">@color/background</item>
        <item name="android:textColor">#DFDFDF</item>
    </style>

    <style name="Numbers_Button" parent="Calculator_container_Button">
        <item name="android:backgroundTint">#c9c9c9</item>
        <item name="android:textColor">@color/background</item>
    </style>


    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_rounded_bg</item>
        <item name="android:backgroundTint">#DFDFDF</item>
    </style>

    <style name="BottomAddDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>