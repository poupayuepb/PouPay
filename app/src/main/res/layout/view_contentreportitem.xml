<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ContentReportItem_Root"
    android:padding="6dp"
    android:gravity="center">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ContentReportItem_Image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/background"
        android:padding="2dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/rounded_shap"
        app:srcCompat="@drawable/ic_card_24" />

    <TextView
        android:id="@+id/ContentReportItem_Title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/txt_description_value"
        android:textColor="@color/black"
        android:paddingHorizontal="12dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ContentReportItem_Image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ContentReportItem_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:text="@string/txt_totValue"
        android:textColor="@color/green"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
