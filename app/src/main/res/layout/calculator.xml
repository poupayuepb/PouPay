<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_horizontal_rule_36"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c9c9c9"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_expression"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginEnd="14dp"
                android:ellipsize="start"
                android:gravity="end"
                android:singleLine="true"
                android:textColor="@color/background"
                android:textStyle="bold"
                android:textSize="36sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_result"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginEnd="14dp"
                android:ellipsize="end"
                android:gravity="end"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="#424242"
                android:textSize="28sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clean"
            style="@style/Operators_Button"
            android:text="C" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/parentheses"
            style="@style/Operators_Button"
            android:text="( )" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/percentage"
            style="@style/Operators_Button"
            android:text="%" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/division"
            style="@style/Operators_Button"
            android:text="รท" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_seven"
            style="@style/Numbers_Button"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_eight"
            style="@style/Numbers_Button"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_nine"
            style="@style/Numbers_Button"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/multiplication"
            style="@style/Operators_Button"
            android:text="ร" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_four"
            style="@style/Numbers_Button"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_five"
            style="@style/Numbers_Button"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_six"
            style="@style/Numbers_Button"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/subtraction"
            style="@style/Operators_Button"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_one"
            style="@style/Numbers_Button"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_two"
            style="@style/Numbers_Button"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_three"
            style="@style/Numbers_Button"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sum"
            style="@style/Operators_Button"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/point"
            style="@style/Numbers_Button"
            android:text="." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/num_zero"
            style="@style/Numbers_Button"
            android:text="0" />

        <ImageView
            android:id="@+id/backspace"
            style="@style/Numbers_Button"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_backspace_24"
            app:tint="@color/background" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/equal"
            style="@style/Operators_Button"
            android:text="=" />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>